<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/id_city_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="省（市）："
            android:textSize="@dimen/main_text_size"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            />
        <EditText
            android:id="@+id/id_city_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:padding="4dp"
            android:textSize="@dimen/main_text_size"
            android:layout_gravity="center_vertical"
            android:background="@drawable/shape_grey_corner_edittext"
            />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/id_district_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="地区："
            android:textSize="@dimen/main_text_size"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            />
        <EditText
            android:id="@+id/id_district_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:padding="4dp"
            android:textSize="@dimen/main_text_size"
            android:layout_gravity="center_vertical"
            android:background="@drawable/shape_grey_corner_edittext"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/id_street_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="街道："
            android:textSize="@dimen/main_text_size"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            />
        <EditText
            android:id="@+id/id_street_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:padding="4dp"
            android:textSize="@dimen/main_text_size"
            android:layout_gravity="center_vertical"
            android:background="@drawable/shape_grey_corner_edittext"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/id_position_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="位置："
            android:textSize="@dimen/main_text_size"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            />
        <Spinner
            android:id="@+id/id_position_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:gravity="center"
            android:layout_gravity="bottom"
            >

        </Spinner>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/id_describle_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="详细描述："
            android:textSize="@dimen/main_text_size"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            />
        <EditText
            android:id="@+id/id_describle_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:padding="4dp"
            android:textSize="@dimen/main_text_size"
            android:layout_gravity="center_vertical"
            android:background="@drawable/shape_grey_corner_edittext"
            />
    </LinearLayout>

</LinearLayout>